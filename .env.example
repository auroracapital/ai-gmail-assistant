# Gmail Inbox Organizer - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# OPENROUTER API (for AI categorization)
# ============================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# ============================================
# GMAIL API CREDENTIALS
# ============================================
# Path to your Gmail OAuth credentials JSON file
# Download from: https://console.cloud.google.com/apis/credentials
GMAIL_CREDENTIALS_PATH=./credentials/client_secret.json

# Path where the authenticated token will be stored
GMAIL_TOKEN_PATH=./credentials/gmail_token.pickle

# ============================================
# AWS CONFIGURATION (for Lambda deployment)
# ============================================
# AWS region for deployment
AWS_REGION=eu-west-1

# AWS Secrets Manager secret names (if using AWS deployment)
AWS_SECRET_OPENROUTER=gmail-organizer/openrouter-api-key
AWS_SECRET_GMAIL_OAUTH=gmail-organizer/gmail-oauth-credentials
AWS_SECRET_GMAIL_TOKEN=gmail-organizer/gmail-api-token

# ============================================
# ORGANIZER SETTINGS
# ============================================
# Maximum number of emails to process per run
MAX_EMAILS=50

# AI model to use for categorization
AI_MODEL=anthropic/claude-sonnet-4.5

# AI temperature for categorization (0.0-1.0, lower = more consistent)
AI_TEMPERATURE_CATEGORIZATION=0.1

# AI temperature for draft generation (0.0-1.0, lower = more consistent)
AI_TEMPERATURE_DRAFTS=0.3

# ============================================
# LABEL COLORS (Gmail API color codes)
# ============================================
# Red for action items
LABEL_COLOR_ACTION_BG=#fb4c2f
LABEL_COLOR_ACTION_TEXT=#ffffff

# Orange for respond items
LABEL_COLOR_RESPOND_BG=#ffad47
LABEL_COLOR_RESPOND_TEXT=#000000

# Green for FYI items
LABEL_COLOR_FYI_BG=#16a766
LABEL_COLOR_FYI_TEXT=#ffffff

# ============================================
# USER PROFILE (for AI context)
# ============================================
# Your name
USER_NAME=Sam Feldt

# Your role/title
USER_ROLE=Music Producer, DJ, Entrepreneur

# Your companies (comma-separated)
USER_COMPANIES=Healify,Heartfeldt Records

# Your location
USER_LOCATION=Amsterdam, Netherlands

# Languages you use (comma-separated)
USER_LANGUAGES=Dutch,English
